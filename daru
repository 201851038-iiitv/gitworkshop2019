#include<bits/stdc++.h>
using namespace std;

#define ll long long int 
#define F(i,a,b) for(long long int i = (a); i < (b) ; ++i)
#define f1(n) for(long long int i = 0 ; i < (n) ; ++i)
#define f2(n) for(long long int j = 0 ; j < (n) ; ++j)
#define vat(array) vector<ll> array

int main()
{
      ll t;
      cin>>t;
      while(t--)
      {
           ll n;
           cin>>n;
           string s;
           cin>>s;
           ll k=0;
           if(n%2==1)
           {
                f1(n)
                {
                     if((s[i]=='1'||s[i]=='3'||s[i]=='5'||s[i]=='7'||s[i]=='9')&&i%2==0)
                     {
                         cout<<1<<endl;
                         k=1;
                         break;
                     }
                }
                if(k==0)
                 {
                     cout<<2<<endl;
                 }
           }
           else
           {
                f1(n)
                {
                     if((s[i]=='0'||s[i]=='2'||s[i]=='4'||s[i]=='6'||s[i]=='8')&&i%2==1)
                     {
                         cout<<2<<endl;
                         k=1;
                         break;
                     }
                }
                if(k==0)
                 {
                     cout<<1<<endl;
                 }
           }
      }
    return 0;
}
